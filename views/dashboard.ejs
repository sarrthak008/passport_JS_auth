<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8 text-center">Dashboard</h1>
    <h2>Login by <%= user?.name %></h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Cars to Buy Section -->
      <div>
        <h2 class="text-2xl font-semibold mb-4">Cars to Buy</h2>
        <div class="bg-white shadow rounded-lg p-4">
          <% 
            const buyCars = [
              { name: 'Toyota Camry', price: '$20,000', year: 2018 },
              { name: 'Honda Civic', price: '$18,000', year: 2019 },
              { name: 'Ford Mustang', price: '$25,000', year: 2020 }
            ];
          %>
          <ul>
            <% buyCars.forEach(car => { %>
              <li class="border-b border-gray-200 py-2">
                <div class="flex justify-between">
                  <span class="font-medium"><%= car.name %> (<%= car.year %>)</span>
                  <span class="text-green-600 font-semibold"><%= car.price %></span>
                </div>
              </li>
            <% }); %>
          </ul>
        </div>
      </div>

      <!-- Cars to Sell Section -->
      <div>
        <h2 class="text-2xl font-semibold mb-4">Cars to Sell</h2>
        <div class="bg-white shadow rounded-lg p-4">
          <% 
            const sellCars = [
              { name: 'BMW 3 Series', price: '$30,000', year: 2017 },
              { name: 'Audi A4', price: '$28,000', year: 2018 },
              { name: 'Mercedes-Benz C-Class', price: '$35,000', year: 2019 }
            ];
          %>
          <ul>
            <% sellCars.forEach(car => { %>
              <li class="border-b border-gray-200 py-2">
                <div class="flex justify-between">
                  <span class="font-medium"><%= car.name %> (<%= car.year %>)</span>
                  <span class="text-red-600 font-semibold"><%= car.price %></span>
                </div>
              </li>
            <% }); %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
